<%- include('../parts/html-head') %>
<%- include('../parts/navbar') %>

<style>
    table a>.fa-trash-alt{
        color: #cc2525;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                  <!-- 沒頁數後停止 -->
                    <li class="page-item <%= page<=1 ? 'disabled' : '' %>">
                        <a class="page-link" href="/urlinmysql/list/<%= page-1 %>">
                            <i class="fas fa-arrow-circle-left"></i>
                        </a>
                    </li>
                    <!-- 依資料數增加頁數 -->
                    <% for(let i=1; i<=totalPages; i++){ %>
                    <li class="page-item <%= page==i ? 'active' : '' %>">
                        <a class="page-link" href="/urlinmysql/list/<%= i %>"><%= i %></a>
                    </li>
                    <% } %>
                    <li class="page-item <%= page>=totalPages ? 'disabled' : '' %>"> 
                        <a class="page-link" href="/urlinmysql/list/<%= page+1 %>">
                            <i class="fas fa-arrow-circle-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
         
                    <th scope="col">sid</th>
                    <th scope="col">標題</th>
                    <th scope="col">留言數</th>
                    <th scope="col">發布時間</th>
      
                </tr>
                </thead>
                <tbody>
                <% for(let i of rows){ %>
                    <tr data-sid="<%= i.sid %>">
                 
                        <td><%= i.sid %></td>
                        <td><%= i.title %></td>
                        <td><%= i.popularity %></td>
                        <td><%= i.posttime %></td>
               
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('../parts/scripts') %>
<%- include('../parts/html-foot') %>